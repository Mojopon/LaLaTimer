<UserControl x:Class="LaLaTimer.Views.DigitalTimerInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:LaLaTimer.Views.Controls"
             xmlns:local="clr-namespace:LaLaTimer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <c:DigitalTimerInputField Hour="{Binding Hour}" Minute="{Binding Minute}" Second="{Binding Second}" FontSize="20"/>
    </Grid>
</UserControl>
