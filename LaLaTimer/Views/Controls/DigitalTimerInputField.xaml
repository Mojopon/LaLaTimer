<UserControl x:Class="LaLaTimer.Views.Controls.DigitalTimerInputField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LaLaTimer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300"
             x:Name="root">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" Width="50" Height="30" Text="{Binding Hour, ElementName=root}"/>
        <TextBox Grid.Column="1" Width="50" Height="30" Text="{Binding Minute, ElementName=root}"/>
        <TextBox Grid.Column="2" Width="50" Height="30" Text="{Binding Second, ElementName=root}"/>
    </Grid>
</UserControl>
